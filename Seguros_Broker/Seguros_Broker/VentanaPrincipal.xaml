<Fluent:RibbonWindow x:Class="Seguros_Broker.VentanaPrincipal"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:Fluent="urn:fluent-ribbon"
                     Title="Broker" 
                     Width="1280" 
                     Height="720">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Fluent:Ribbon Grid.Row="0">
            <!--Backstage-->
            <Fluent:Ribbon.Menu>
                <Fluent:Backstage>
                </Fluent:Backstage>
            </Fluent:Ribbon.Menu>

            <!--Tabs-->
            <!--Tab Maestros-->
            <Fluent:RibbonTabItem Header="Maestros">
                <!--SubTab 1 Persona-->
                <Fluent:RibbonGroupBox Header="Persona">
                    <Fluent:Button Header="Ejecutivo" Click="Ejecutivo_Click" Icon="{StaticResource ejecutivo_icon}" />
                    <Fluent:Button Header="Socio" Icon="{StaticResource socio_icono}"/>
                    <Fluent:Button Header="Gestor" Icon="{StaticResource gestor_icono}"/>
                    <Fluent:Button Header="Abogado" Icon="{StaticResource abogado_icono}"/>
                    <Fluent:Button Header="Liquidador" Icon="{StaticResource liquidador_icono}"/>
                    <Fluent:Button Header="Perfil" Icon="{StaticResource perfil_icono}"/>
                </Fluent:RibbonGroupBox>
                <!--SubTab 2 Carteras-->
                <Fluent:RibbonGroupBox Header="Carteras">
                    <Fluent:Button Header="Cliente" Icon="{StaticResource cliente_icono}"/>
                    <Fluent:Button Header="Compañía" Icon="{StaticResource compania_icono}"/>
                </Fluent:RibbonGroupBox>
                <!--SubTab 3 Cobertura y Ramo-->
                <Fluent:RibbonGroupBox Header="Cobertura y Ramo">
                    <Fluent:Button Header="Productos" Icon="{StaticResource producto_icono}"/>
                    <Fluent:Button Header="Cobertura" Icon="{StaticResource cobertura_icono}"/>
                    <Fluent:Button Header="Ramos" Icon="{StaticResource ramos_icono}"/>
                </Fluent:RibbonGroupBox>
                <!--SubTab 4 Siniestro-->
                <Fluent:RibbonGroupBox Header="Siniestro">
                    <Fluent:Button Header="Siniestro" Icon="{StaticResource siniestro_icono}"/>
                </Fluent:RibbonGroupBox>
                <!--SubTab 5 Lugar-->
                <Fluent:RibbonGroupBox Header="Lugar">
                    <Fluent:Button Header="Ciudad" Icon="{StaticResource ciudad_icono}"/>
                    <Fluent:Button Header="País" Icon="{StaticResource pais_icono}"/>
                </Fluent:RibbonGroupBox>
                <!--SubTab 6 Otros-->
                <Fluent:RibbonGroupBox Header="Otros">
                    <Fluent:Button Header="Cuenta Corriente" Icon="{StaticResource tarjeta_icono}"/>
                    <Fluent:Button Header="Moneda" Icon="{StaticResource moneda_icono}"/>
                    <Fluent:Button Header="Valores" Icon="{StaticResource valores_icono}"/>
                    <Fluent:Button Header="Acción Bitácora" Icon="{StaticResource accion_bitacora_icono}"/>
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
            <!--Tab Cotizaciones-->
            <Fluent:RibbonTabItem Header="Cotizaciones">
                <Fluent:RibbonGroupBox Header="Group">
                    <Fluent:Button Header="Green"/>
                    <Fluent:Button Header="Grey"/>
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
            <!--Tab Cotizaciones-->
            <Fluent:RibbonTabItem Header="Producción">
                <!--SubTab 1 Propuesta-->
                <Fluent:RibbonGroupBox Header="Propuesta">
                    <Fluent:Button Header="Nueva Propuesta" Icon="{StaticResource cobertura_icono}" />
                    <Fluent:Button Header="Buscar Propuesta" Icon="{StaticResource lupa_icono}"/>
                </Fluent:RibbonGroupBox>
                <!--SubTab 2 Póliza-->
                <Fluent:RibbonGroupBox Header="Póliza">
                    <Fluent:Button Header="Buscar Póliza" Icon="{StaticResource lupa_icono}"/>
                </Fluent:RibbonGroupBox>
                <!--SubTab 3 Cuentas Corrientes-->
                <Fluent:RibbonGroupBox Header="Cuentas Corrientes">
                    <Fluent:Button Header="Plan de Pago" Icon="{StaticResource invoice_icono}"/>
                </Fluent:RibbonGroupBox>
                <!--SubTab 4 Cobranza Comisión-->
                <Fluent:RibbonGroupBox Header="Cobranza Comisión">
                    <Fluent:Button Header="Liquidar Comisiones" Icon="{StaticResource file_lines_icono}"/>
                    <Fluent:Button Header="Buscar Liquidación" Icon="{StaticResource lupa_icono}"/>
                    <Fluent:Button Header="Cobrar Documentos" Icon="{StaticResource file_lines_icono}"/>
                    <Fluent:Button Header="Cobrar Comisión Otros Conceptos" Icon="{StaticResource invoice_icono}"/>
                    <Fluent:Button Header="Buscar Cobros" Icon="{StaticResource lupa_icono}"/>
                </Fluent:RibbonGroupBox>
                <!--SubTab 5 Pago de Comisión-->
                <Fluent:RibbonGroupBox Header="Pago de Comisión">
                    <Fluent:Button Header="Pago a Terceros" Icon="{StaticResource money_hand_icono}"/>
                    <Fluent:Button Header="Buscar Pago" Icon="{StaticResource lupa_icono}"/>
                </Fluent:RibbonGroupBox>
                <!--SubTab 6 Siniestro-->
                <Fluent:RibbonGroupBox Header="Siniestro">
                    <Fluent:Button Header="Buscar Siniestro" Icon="{StaticResource siniestro_icono}"/>
                </Fluent:RibbonGroupBox>
                <!--SubTab 7 Vencimientos-->
                <Fluent:RibbonGroupBox Header="Vencimientos">
                    <Fluent:Button Header="Ver Vencimientos" Icon="{StaticResource vencimiento_icono}"/>
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
            <!--Tab Informes-->
            <Fluent:RibbonTabItem Header="Informes">
                <Fluent:RibbonGroupBox Header="Group">
                    <Fluent:Button Header="Green"/>
                    <Fluent:Button Header="Grey"/>
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
            <!--Tab Carga Masiva-->
            <Fluent:RibbonTabItem Header="Carga Masiva">
                <Fluent:RibbonGroupBox Header="Group">
                    <Fluent:Button Header="Green"/>
                    <Fluent:Button Header="Grey"/>
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
        </Fluent:Ribbon>

        <Grid Grid.Row="1">
            <TextBlock>My first window containing a Ribbon and something else.</TextBlock>
        </Grid>
    </Grid>
</Fluent:RibbonWindow>