<Window x:Class="Seguros_Broker.ClienteMantenedor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Seguros_Broker"
        mc:Ignorable="d"
        Title="ClienteMantenedor" WindowState="Maximized">
    <Window.Resources>
        <Style x:Key="LabelRequired" TargetType="{x:Type TextBlock}">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
        </Style>
        <Style x:Key="Asterisk" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
        </Style>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="0,4,0,12"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0,4,0,12"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="MinWidth" Value="90"/>
        </Style>
    </Window.Resources>

    <TabControl SelectionChanged="TabControl_SelectionChanged">

        <TabItem Header="Datos Compañía">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" CornerRadius="8" Background="White" Padding="12" BorderBrush="#E0E0E0" BorderThickness="1">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Stretch">
                            <TextBlock FontSize="18" FontWeight="Bold" VerticalAlignment="Center"><Run Text="C"/><Run Language="es-mx" Text="liente"/></TextBlock>
                            <TextBox x:Name="txtSearch" Width="260" Margin="12,0,0,0" VerticalAlignment="Center" ToolTip="Buscar por nombre, código o nick"/>
                            <Button x:Name="btnBuscar" Content="Buscar" VerticalAlignment="Center" Margin="8,0,0,0" Click="btnBuscar_Click"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0"/>
                    </DockPanel>
                </Border>

                <Border Grid.Column="1" CornerRadius="8" Background="White" Padding="16" BorderBrush="#E0E0E0" BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock FontSize="16" FontWeight="Bold" Margin="0,0,0,12"><Run Text="Registrar / Editar "/><Run Language="es-mx" Text="Cliente"/><LineBreak/><Run Language="es-mx"/></TextBlock>

                            <StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource LabelRequired}" Text="Tipo identificación"/>
                                    <TextBlock Style="{StaticResource Asterisk}" Text="*"/>
                                </StackPanel>
                                <ComboBox x:Name="cbTipoIdentificacion" SelectedIndex="0">
                                    <ComboBoxItem Content="SELECCIONE"/>
                                    <ComboBoxItem Content="RUT"/>
                                    <ComboBoxItem Content="Otros"/>
                                </ComboBox>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource LabelRequired}" Text="Identificación"/>
                                    <TextBlock Style="{StaticResource Asterisk}" Text="*"/>
                                </StackPanel>
                                <TextBox x:Name="txtIdentificacion"/>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource LabelRequired}" Text="Nombre"/>
                                    <TextBlock Style="{StaticResource Asterisk}" Text="*"/>
                                </StackPanel>
                                <TextBox x:Name="txtNombre"/>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource LabelRequired}" Text="Apellido paterno"/>
                                    <TextBlock Style="{StaticResource Asterisk}" Text="*"/>
                                </StackPanel>
                                <TextBox x:Name="txtAPaterno"/>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource LabelRequired}" Text="Apellido materno"/>
                                    <TextBlock Style="{StaticResource Asterisk}" Text="*"/>
                                </StackPanel>
                                <TextBox x:Name="txtAMaterno"/>


                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource LabelRequired}" Text="Holding"/>
                                    <TextBlock Style="{StaticResource Asterisk}" Text="*"/>
                                </StackPanel>
                                <ComboBox x:Name="cbHolding" SelectedValuePath="ID" DisplayMemberPath="Nombre">
                                </ComboBox>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource LabelRequired}" Text="Director Comercial"/>
                                    <TextBlock Style="{StaticResource Asterisk}" Text="*"/>
                                </StackPanel>
                                
                                <!-- Ejecutivo combo box-->

                                <ComboBox x:Name="cbEjecutivo" SelectedValuePath="ID" DisplayMemberPath="Nombre">
                                </ComboBox>

                                
                                <TextBlock Text="Fono" FontWeight="Normal" Margin="0,8,0,2"/>
                                <TextBox x:Name="txtFono"/>


                                <TextBlock Text="Página web" FontWeight="Normal" Margin="0,8,0,2"/>
                                <TextBox x:Name="txtPagina"/>

                                <TextBlock Text="Nombre Corto" FontWeight="Normal" Margin="0,8,0,2"/>
                                <TextBox x:Name="txtCorto"/>

                                <TextBlock Text="Referencia" FontWeight="Normal" Margin="0,8,0,2"/>
                                <TextBox x:Name="txtReferencia"/>
                                
                                <!--Direccion Particular-->
                                <TextBlock Text="Direccion Particular" FontWeight="Normal" RenderTransformOrigin="0.504,0.015"/>

                                <TextBlock Text="País" FontWeight="Normal" Margin="0,8,0,2"/>
                                <TextBox x:Name="txtPaisParticular"/>

                                <TextBlock Text="Ciudad" FontWeight="Normal" Margin="0,8,0,2"/>
                                <TextBox x:Name="txtCiudadParticular"/>

                                <TextBlock Text="Región" FontWeight="Normal" Margin="0,8,0,2"/>
                                <TextBox x:Name="txtRegionParticular"/>

                                <TextBlock Text="Comuna" FontWeight="Normal" Margin="0,8,0,2"/>
                                <TextBox x:Name="txtComunaParticular"/>

                                <TextBlock Text="Dirección" FontWeight="Normal" Margin="0,8,0,2"/>
                                <TextBox x:Name="txtDireccionParticular"/>

                                <!--Direccion Comercial-->
                                <TextBlock Text="Direccion Comercial" FontWeight="Normal" RenderTransformOrigin="0.504,0.015"/>

                                <TextBlock Text="País" FontWeight="Normal" Margin="0,8,0,2"/>
                                <TextBox x:Name="txtPaisComercial"/>

                                <TextBlock Text="Ciudad" FontWeight="Normal" Margin="0,8,0,2"/>
                                <TextBox x:Name="txtCiudadComercial"/>

                                <TextBlock Text="Región" FontWeight="Normal" Margin="0,8,0,2"/>
                                <TextBox x:Name="txtRegionComercial"/>

                                <TextBlock Text="Comuna" FontWeight="Normal" Margin="0,8,0,2"/>
                                <TextBox x:Name="txtComunaComercial"/>

                                <TextBlock Text="Dirección" FontWeight="Normal" Margin="0,8,0,2"/>
                                <TextBox x:Name="txtDireccionComercial"/>

                                <!--Botones Guardar/Actualizar/Cancelar-->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0" >
                                    <StackPanel Orientation="Horizontal" >
                                        <Button x:Name="btnLimpiar" Content="Limpiar" VerticalAlignment="Center" Margin="8,0,0,0" Click="btnLimpiar_Click"/>
                                    </StackPanel>
                                    <Button x:Name="btnGuardar" Content="Guardar" Click="btnGuardar_Click"/>
                                    <Button x:Name="btnActualizar" Content="Actualizar" Click="btnActualizar_Click"/>
                                    <Button x:Name="btnCancelar" Content="Cancelar" Click="btnCancelar_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
                <DataGrid x:Name="dataGridCliente"
                      Margin="10,72,10,10"
                      AutoGenerateColumns="True"
                      HeadersVisibility="All"
                      IsReadOnly="True"
                      SelectionChanged="DataGrid_SelectionChanged"
            />

            </Grid>
        </TabItem>

        <TabItem Header="Contactos">

        </TabItem>

        <TabItem Header="Holdings" Height="20" VerticalAlignment="Top">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" CornerRadius="8" Background="White" Padding="12" BorderBrush="#E0E0E0" BorderThickness="1">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Stretch">
                            <TextBlock Text="Clientes" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtSearch_ClienteHolding" Width="260" Margin="12,0,0,0" VerticalAlignment="Center" ToolTip="Buscar por nombre, código o nick"/>
                            <Button x:Name="btnBuscar_ClienteHolding" Content="Buscar" VerticalAlignment="Center" Margin="8,0,0,0" Click="btnBuscar_Grupo_Click"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0"/>
                    </DockPanel>
                </Border>

                <Border Grid.Column="1" CornerRadius="8" Background="White" Padding="16" BorderBrush="#E0E0E0" BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock FontSize="16" FontWeight="Bold" Margin="0,0,0,12"><Run Text="Registrar / Editar "/><Run Language="es-mx" Text="Holding"/></TextBlock>

                            <StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource LabelRequired}" Text="Nombre"/>
                                    <TextBlock Style="{StaticResource Asterisk}" Text="*"/>
                                </StackPanel>
                                <TextBox x:Name="txtNombreHolding"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0" >
                                    <StackPanel Orientation="Horizontal" >
                                        <Button x:Name="btnLimpiarHolding" Content="Limpiar" VerticalAlignment="Center" Margin="8,0,0,0" Click="btnLimpiar_Holder_Click"/>
                                    </StackPanel>
                                    <Button x:Name="btnGuardarHolding" Content="Guardar" Click="btnGuardar_Holding_Click"/>
                                    <Button x:Name="btnActualizarHolding" Content="Actualizar" Click="btnActualizar_Holding_Click"/>
                                    <Button x:Name="btnCancelarHolding" Content="Cancelar" Click="btnCancelar_Holding_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
                <DataGrid x:Name="dataGridHolding"
                      Margin="10,72,10,10"
                      AutoGenerateColumns="True"
                      HeadersVisibility="All"
                      IsReadOnly="True"
                      SelectionChanged="DataGrid_SelectionChanged_Holding"
                        />

            </Grid>

        </TabItem>

    </TabControl>
</Window>
