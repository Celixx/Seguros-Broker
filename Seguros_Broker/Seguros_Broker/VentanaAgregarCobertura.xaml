<Window x:Class="Seguros_Broker.VentanaAgregarCobertura"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cobertura" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                <TextBox Width="250" VerticalAlignment="Center" />
                <Button Padding="5" Margin="5,0,0,0" ToolTip="Buscar">
                    <TextBlock Text="🔍"/>
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Label Content="Filtro según grupo:" VerticalAlignment="Center"/>
                <ComboBox VerticalAlignment="Center" MinWidth="150" SelectedIndex="0">
                    <ComboBoxItem IsSelected="True">MOSTRAR TODOS</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </DockPanel>

        <DataGrid Grid.Row="1" 
                  x:Name="CoberturasDataGrid" AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  HeadersVisibility="Column" 
                  IsReadOnly="True">

            <DataGrid.Columns>

                <!-- Esta columna está BIEN (usa 'IsSelected') -->
                <DataGridTemplateColumn Width="Auto">
                    <DataGridTemplateColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGridTemplateColumn.HeaderStyle>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                
                <DataGridTextColumn Header="Código" Binding="{Binding codigo}" Width="Auto"/>
                
                
                <DataGridTextColumn Header="Nombre" Binding="{Binding nombre}" Width="*"/>

                
            </DataGrid.Columns>
        </DataGrid>

        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="✔" Foreground="Green" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="Bold"/>
                    <TextBlock Text="Registros encontrados: 24" VerticalAlignment="Center"/>
                </StackPanel>
            </StatusBarItem>

            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Coberturas seleccionadas: 0" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                    <Button Content="aceptar" Padding="10,3" FontWeight="Bold"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>