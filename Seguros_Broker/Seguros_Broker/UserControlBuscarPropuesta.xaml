<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Seguros_Broker.UserControlBuscarPropuesta"
             MinWidth="900" MinHeight="300">
    <Grid Margin="10" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- FILTROS SUPERIORES -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Columna 1 -->
            <StackPanel Margin="0,0,15,0">
                <TextBlock Text="Desde"/>
                <DatePicker x:Name="dpDesde"/>

                <TextBlock Text="Moneda" Margin="0,10,0,0"/>
                <ComboBox x:Name="cbMoneda"/>

                <TextBlock Text="Tipo de Póliza" Margin="0,10,0,0"/>
                <ComboBox x:Name="cbTipoPoliza"/>

                <TextBlock Text="Contratante" Margin="0,10,0,0"/>
                <Grid>
                    <ComboBox x:Name="cbContratante"/>
                    <Button x:Name="btnBuscarContratante" Content="🔍" Width="25" Height="25" HorizontalAlignment="Right" Margin="0,0,2,0"/>
                </Grid>

                <TextBlock Text="Compañía" Margin="0,10,0,0"/>
                <Grid>
                    <ComboBox x:Name="cbCompania"/>
                    <Button x:Name="btnBuscarCompania" Content="🔍" Width="25" Height="25" HorizontalAlignment="Right" Margin="0,0,2,0"/>
                </Grid>

                <TextBlock Text="Ramo" Margin="0,10,0,0"/>
                <Grid>
                    <ComboBox x:Name="cbRamo"/>
                    <Button x:Name="btnBuscarRamo" Content="🔍" Width="25" Height="25" HorizontalAlignment="Right" Margin="0,0,2,0"/>
                </Grid>
            </StackPanel>

            <!-- Columna 2 -->
            <StackPanel Grid.Column="1" Margin="0,0,15,0">
                <TextBlock Text="Hasta"/>
                <DatePicker x:Name="dpHasta"/>

                <TextBlock Text="Número Póliza" Margin="0,10,0,0"/>
                <Grid>
                    <TextBox x:Name="txtNroPoliza"/>
                    <Button x:Name="btnBuscarNumeroPoliza" Content="🔍" Width="25" Height="25" HorizontalAlignment="Right" Margin="0,0,2,0"/>
                </Grid>
                

                <TextBlock Text="Rut Asegurado" Margin="0,10,0,0"/>
                <TextBox x:Name="txtRutAsegurado"/>
            </StackPanel>

            <!-- Columna 3 -->
            <StackPanel Grid.Column="2" Margin="0,0,15,0">
                <TextBlock Text="Según"/>
                <ComboBox x:Name="cbSegun"/>

                <TextBlock Text="Patente" Margin="0,10,0,0"/>
                <TextBox x:Name="txtPatente"/>

                <TextBlock Text="Estado" Margin="0,10,0,0"/>
                <ComboBox x:Name="cbEstado"/>

                <TextBlock Text="Socio" Margin="0,10,0,0"/>
                <Grid>
                    <ComboBox x:Name="cbSocio"/>
                    <Button x:Name="btnBuscarSocio" Content="🔍" Width="25" Height="25" HorizontalAlignment="Right" Margin="0,0,2,0"/>
                </Grid>

                <TextBlock Text="Gestor" Margin="0,10,0,0"/>
                <Grid>
                    <ComboBox x:Name="cbGestor"/>
                    <Button x:Name="btnBuscarGestor" Content="🔍" Width="25" Height="25" HorizontalAlignment="Right" Margin="0,0,2,0"/>
                </Grid>

                <TextBlock Text="Holding" Margin="0,10,0,0"/>
                <Grid>
                    <ComboBox x:Name="cbHolding"/>
                    <Button x:Name="btnBuscarHolding" Content="🔍" Width="25" Height="25" HorizontalAlignment="Right" Margin="0,0,2,0"/>
                </Grid>
            </StackPanel>

            <!-- Botones laterales -->
            <StackPanel Grid.Column="3" VerticalAlignment="Top">
                <Button x:Name="btnLimpiar" Content="[Borrar]" Width="40" Height="40" Margin="0,0,0,8"/>
                <Button x:Name="btnBuscar" Content="[Check]" Width="40" Height="40" Margin="0,0,0,8"/>
                <Button x:Name="btnExcel" Content="[Excel]" Width="40" Height="40"/>
            </StackPanel>
        </Grid>

        <!-- TABLA RESULTADOS -->
        <DataGrid x:Name="dataGridPropuestas"
          Grid.Row="1"
          AutoGenerateColumns="True"
          HeadersVisibility="All"
          IsReadOnly="True"                  
          SelectionMode="Single"/>
    </Grid>
</UserControl>
