<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Seguros_Broker.UserControlBuscarPropuesta"
             MinWidth="900" MinHeight="300">
    <Grid Margin="10" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- FILTROS SUPERIORES -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Columna 1 -->
            <StackPanel Margin="0,0,15,0">
                <TextBlock Text="Desde"/>
                <DatePicker x:Name="dpDesde" IsEnabled="False"/>

                <TextBlock Text="Moneda" Margin="0,10,0,0"/>
                <ComboBox x:Name="cbMoneda" SelectedValuePath="monedaId" DisplayMemberPath="nombre" IsEnabled="False"/>

                <TextBlock Text="Tipo de Póliza" Margin="0,10,0,0"/>
                <ComboBox x:Name="cbTipoPoliza" IsEnabled="False">
                    <ComboBoxItem Content="Póliza Convencional"/>
                    <ComboBoxItem Content="Póliza Colectiva"/>
                </ComboBox>

                <TextBlock Text="Contratante/Cliente" Margin="0,10,0,0"/>
                <Grid>
                    <ComboBox x:Name="cbContratante" SelectedValuePath="ID" DisplayMemberPath="Nombre" IsEnabled="False"/>
                </Grid>

                <TextBlock Text="Compañía" Margin="0,10,0,0"/>
                <Grid>
                    <ComboBox x:Name="cbCompania" SelectedValuePath="ID" DisplayMemberPath="nombre" IsEnabled="False"/>
                </Grid>

                <TextBlock Text="Ramo" Margin="0,10,0,0"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="181*"/>
                        <ColumnDefinition Width="68*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="cbRamo" SelectedValuePath="ID" DisplayMemberPath="nombre" Grid.ColumnSpan="2" IsEnabled="False"/>
                </Grid>
            </StackPanel>

            <!-- Columna 2 -->
            <StackPanel Grid.Column="1" Margin="0,0,15,0">
                <TextBlock Text="Hasta"/>
                <DatePicker x:Name="dpHasta" IsEnabled="false"/>

                <TextBlock Text="Número Póliza" Margin="0,10,0,0"/>
                <Grid>
                    <TextBox x:Name="txtNroPoliza"/>
                    <Button x:Name="btnBuscarNumeroPoliza" Content="🔍" Width="25" Height="25" HorizontalAlignment="Right" Margin="0,0,2,0" Click="btnBuscarNumeroPoliza_Click"/>
                </Grid>


                <TextBlock Text="Rut Asegurado" Margin="0,10,0,0"/>
                <TextBox x:Name="txtRutAsegurado" IsEnabled="False"/>
            </StackPanel>

            <!-- Columna 3 -->
            <StackPanel Grid.Column="2" Margin="0,0,15,0">

                <TextBlock Text="Patente" Margin="0,10,0,0"/>
                <TextBox x:Name="txtPatente" IsEnabled="False"/>

                <TextBlock Text="Estado" Margin="0,10,0,0"/>
                <TextBox x:Name="txtEstado" IsReadOnly="True"/>

                <TextBlock Text="Socio" Margin="0,10,0,0"/>
                <Grid>
                    <ComboBox x:Name="cbSocio" SelectedValuePath="ID" DisplayMemberPath="nombre" IsEnabled="False"/>
                </Grid>

                <TextBlock Text="Gestor" Margin="0,10,0,0"/>
                <Grid>
                    <ComboBox x:Name="cbGestor" SelectedValuePath="ID" DisplayMemberPath="nombre" IsEnabled="False"/>
                </Grid>

                <TextBlock Text="Plan de pago" Margin="0,10,0,0"/>
                <Grid>
                    <ComboBox x:Name="cbHolding"/>
                </Grid>
            </StackPanel>

            <!-- Botones laterales -->
            <StackPanel Grid.Column="3" VerticalAlignment="Top">
                <Button IsEnabled="False" x:Name="btnLimpiar"
                        Width="90"
                        Height="40"
                        Margin="0,0,0,8" Click="btnLimpiar_Click">

                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Margin="4">

                        <TextBlock Text="Limpiar"
                                   VerticalAlignment="Center"
                                   Margin="0,0,6,0"/>

                        <Image Source="{StaticResource borrar_icono}"
                               Width="16"
                               Height="16"
                               VerticalAlignment="Center"/>
                    </StackPanel>

                </Button>

                <Button IsEnabled="False" x:Name="btnGuardar"
                        Width="90"
                        Height="40"
                        Margin="0,0,0,8" Click="btnGuardar_Click">

                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Margin="4">

                        <TextBlock Text="Guardar"
                                   VerticalAlignment="Center"
                                   Margin="0,0,6,0"/>

                        <Image Source="{StaticResource guardar_icono}"
                               Width="16"
                               Height="16"
                               VerticalAlignment="Center"/>
                    </StackPanel>

                </Button>

            </StackPanel>
        </Grid>

        <!-- TABLA RESULTADOS -->
        <DataGrid x:Name="dataGridPropuestas"
          Grid.Row="1"
          AutoGenerateColumns="True"
          HeadersVisibility="All"
          IsReadOnly="True"                  
          SelectionMode="Single" SelectionChanged="dataGridPropuestas_SelectionChanged"/>
    </Grid>
</UserControl>
