<Window x:Class="Seguros_Broker.VentanaAgregarNuevoItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar nuevo ítem" 
        SizeToContent="WidthAndHeight" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="5">
                <Label Content="RUT Cliente" Padding="0"/>
                <TextBlock Text="*" Foreground="Red" Margin="5,0,0,0"/>
            </StackPanel>
            <TextBox x:Name="txtRutCliente" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>


            <Label Content="Carrocería" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtCarroceria" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>

            <Label Content="Materia Asegurada" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtMateriaAsegurada" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>

            <Label Content="Valor Comercial" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtValorComercial" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>

            <Label Content="Tipo" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtTipo" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>

            <Label Content="Año" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtAnno" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>

            <Label Content="Número chasis" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtNumeroChasis" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>

            <Label Content="Color" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtColor" Grid.Row="7" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>

            <Label Content="Minuta de ítem" Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtMinutaItem" Grid.Row="8" Grid.Column="1" VerticalAlignment="Center" Margin="5"/>

            <Label Content="Chasis" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtChasis" Grid.Row="1" Grid.Column="4" VerticalAlignment="Center" Margin="5"/>

            <Label Content="Propietario" Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtPropietario" Grid.Row="2" Grid.Column="4" VerticalAlignment="Center" Margin="5"/>

            <Label Content="Marca" Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtMarca" Grid.Row="3" Grid.Column="4" VerticalAlignment="Center" Margin="5"/>

            <Label Content="Modelo" Grid.Row="4" Grid.Column="3" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtModelo" Grid.Row="4" Grid.Column="4" VerticalAlignment="Center" Margin="5"/>

            <Label Content="Número motor" Grid.Row="5" Grid.Column="3" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtNumeroMotor" Grid.Row="5" Grid.Column="4" VerticalAlignment="Center" Margin="5"/>

            <StackPanel Grid.Row="6" Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="5,5,0,5">
                <Label Content="Patente" Padding="0"/>
                <TextBlock Text="*" Foreground="Red" Margin="5,0,0,0"/>
            </StackPanel>
            <TextBox x:Name="txtPatente" Grid.Row="6" Grid.Column="4" VerticalAlignment="Center" Margin="5"/>

            <Label Content="Uso" Grid.Row="7" Grid.Column="3" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtUso" Grid.Row="7" Grid.Column="4" VerticalAlignment="Center" Margin="5"/>

        </Grid>

        <GroupBox Header="Vigencia del ítem" Grid.Row="1" Margin="5,15,5,5" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Label Content="Desde" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpDesde" VerticalAlignment="Center" Margin="5,0"/>

                <Label Content="Hasta" VerticalAlignment="Center" Margin="15,0,0,0"/>
                <DatePicker x:Name="dpHasta" VerticalAlignment="Center" Margin="5,0"/>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="Aceptar" 
                    Width="100" 
                    Height="35" 
                    Margin="5" 
                    Background="#4CAF50" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    BorderThickness="0" 
                    Click="BtaAceptarItem"/>

            <Button Content="Cancelar" 
                    Width="100" 
                    Height="35" 
                    Margin="5" 
                    Background="#DC3545" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    BorderThickness="0"
                    Click="BtnCancelar_Click"/>
        </StackPanel>

    </Grid>
</Window>