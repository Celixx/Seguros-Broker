<UserControl x:Class="Seguros_Broker.UserControlTablaPropuestas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Pólizas vencidas y pólizas por vencer"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="5 0 0 10"/>

        <!-- Tabla -->
        <DataGrid x:Name="dataGridPropuestas"
                  Grid.Row="1"
                  AutoGenerateColumns="True"
                  HeadersVisibility="All"
                  IsReadOnly="True"                  
                  SelectionMode="Single"/>
    </Grid>

</UserControl>
