<UserControl x:Class="Seguros_Broker.UserControlTablaPropuestas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Propuestas por vencer"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="5 0 0 10"
                   Grid.Row="0"/>

        <!-- Tabla -->
        <DataGrid x:Name="dataGridPropuestas"
                  Grid.Row="1"
                  AutoGenerateColumns="True"
                  HeadersVisibility="All"
                  IsReadOnly="True"                  
                  SelectionMode="Single"/>

        <!-- Título -->
        <TextBlock Text="Pagos de propuestas por vencer"
           FontSize="20"
           FontWeight="Bold"
           Margin="5 0 0 10"
           Grid.Row="2"/>

        <!-- Tabla -->
        <DataGrid x:Name="dataGridPagosPropuestas"
          Grid.Row="3"
          AutoGenerateColumns="True"
          HeadersVisibility="All"
          IsReadOnly="True"                  
          SelectionMode="Single">

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="BorderBrush" Value="Yellow"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Style>
            </DataGrid.RowStyle>

        </DataGrid>
    </Grid>

</UserControl>
